#include "stdosl.h"

shader MABRandomCircle(
    point Vector = P,
    int Seed = 1,

    output color Color = 0 )
{
    point center = noise("cell", Seed);
    center[2] = 0;
    if(distance(Vector, center) < 0.2){
        Color = 1;
    }
}
