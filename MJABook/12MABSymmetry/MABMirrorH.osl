#include "stdosl.h"

point mirror_h(point p){
    return point(1-p[0],p[1],p[2]);
}

shader MABMirrorH(
    point VectorIn = P,

    output point VectorOut = P )
{
    VectorOut = mirror_h(VectorIn);
}
