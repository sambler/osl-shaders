#include "stdosl.h"

point mirror_v(point p){
    return point(p[0],1-p[1],p[2]);
}

shader MABMirrorV(
    point VectorIn = P,

    output point VectorOut = P )
{
    VectorOut = mirror_v(VectorIn);
}
