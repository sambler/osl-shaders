point rotate_270(point p){
    vector v = vector(0.5, 0.5, 0);
    point q = p - v;
    q=point(-q[1],q[0],0);
    return q+v;
}

shader MABRotate270(
    point VectorIn = P,

    output point VectorOut = P )
{
    VectorOut = rotate_270(VectorIn);
}
