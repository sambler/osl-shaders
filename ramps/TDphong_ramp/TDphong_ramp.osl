#include <stdosl.h>

shader TDphong_ramp_bsdf(
    normal Normal = N,
    float Exponent = 2.0,
    output closure color BSDF = 0)
{
    color Color[8];
    
    for(int i = 0; i < 8; i++)
        Color[i] = transformc("hsv", "rgb", color(i/7.0, 1.0, 1.0));
    
    BSDF = phong_ramp(N, Exponent, Color);
}

