#include <stdosl.h>

shader TD4D_noise(
    float Time = 1.0,
    output color Perlin = (0.8),
    output color UPerlin = (0.8))
{   
    /* Perlin*/
    Perlin= noise("perlin", P, Time);
   
    /* UPerlin */
    UPerlin= noise("uperlin", P, Time);
}

